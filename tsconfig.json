{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "esnext",
    "typeRoots": ["./src/types"],
    "moduleResolution": "node",
    "types": [
      "node",
      "webpack-env"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "lib": ["dom", "es6"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@store/*": ["src/store/*"],
      "@library/*": ["src/library/*"],
      "@modules/*": ["src/modules/*"],
      "@style/*": ["src/style/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["./src/**/*"]
}
